<style>
    .experiencia-container {
        margin-top: 50px;
    }

    .card-experiencia {
        padding: 10px 0;
        border-bottom: 1px solid #444;
    }

    .card-experiencia__tecnologias {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        padding: 10px 0;
    }
</style>

<div class="experiencia-container">
    <h2 class="titulo">Experiências</h2>

    @foreach (var experiencia in _experiencias)
    {
        <div class="card-experiencia">
            <h3>@experiencia.Empresa</h3>
            <small>@experiencia.Duracao</small>
            <ul class="card-experiencia__tecnologias">
                @foreach (var tecnologia in experiencia.Tecnologias)
                {
                    <li>
                        <MudChip Color="Color.Primary">@tecnologia</MudChip>
                    </li>
                }
            </ul>
        </div>
    }
</div>

@code {
    private class ExperienciaModel
    {
        public string Empresa { get; set; }

        public string Duracao { get; set; }

        public List<string> Tecnologias { get; set; }
    }



    private List<ExperienciaModel> _experiencias = new List<ExperienciaModel>()
{
new ExperienciaModel
{
Empresa = "Seu Din",
Duracao = "08/2022 - atualmente",
Tecnologias = new List<string>()
{
"HTML", "CSS", "Javascript", "Jquery", ".NET Core", ".NET Framework", "SQL Server"
},
}
};
}
