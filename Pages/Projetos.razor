@page "/projetos"
@using Portfolio.Data

<PageTitle>Projetos</PageTitle>

<style>
    .projetos {
        padding: 20px 5%;
    }

    .titulo {
        color: var(--mud-palette-primary);
        font-weight: bold;
    }

    .projetos-lista {
        margin-top: 20px;
    }

    .card-projeto {
        margin-bottom: 20px;
        border-bottom: 1px solid #444;
        padding: 20px 0;
    }

    .card-projeto__tecnologias {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        list-style-position: inside;
        padding: 5px 0;
    }
</style>

<section class="projetos">
    <h2 class="titulo">Meus Projetos:</h2>

    <div class="projetos-lista">
        @foreach (var projeto in ProjetosData.Projetos)
        {
            <div class="card-projeto">
                <h4 class="card-projeto__titulo">@projeto.Titulo</h4>
                <p>@projeto.Descricao</p>

                <ul class="card-projeto__tecnologias">
                    @foreach (var tecnologia in projeto.Tecnologias)
                    {
                        <li>
                            <MudChip Color="Color.Primary">@tecnologia</MudChip>
                        </li>
                    }
                </ul>
                <div class="card-projeto__btns">
                    <MudButton StartIcon="@Icons.Custom.Brands.GitHub" Href="@projeto.RepoUrl" Target="_blank"
                        Color="Color.Secondary" Style="text-transform: none;">
                        Repositório
                    </MudButton>
                    @if (!string.IsNullOrEmpty(projeto.SiteUrl))
                    {
                        <MudButton StartIcon="@Icons.Material.Filled.Web" Href="@projeto.SiteUrl" Target="_blank"
                            Color="Color.Secondary" Style="text-transform: none;">
                            Site
                        </MudButton>
                    }
                </div>
            </div>
        }
    </div>

    <MudButton Target="_blank" Color="Color.Tertiary" Href="https://github.com/Joaoalen98?tab=repositories">
        Ver Todos no GitHub
    </MudButton>
</section>

