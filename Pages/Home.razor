@page "/"

@inject GithubApiService Api

<PageTitle>Home</PageTitle>

<style>
    .home {
        padding: 20px 5%;
    }

    .img-container {
        display: flex;
        justify-content: center;
    }

    .img-perfil {
        width: : 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin: 0 auto;
    }

    .titulo {
        color: var(--mud-palette-primary);
        font-weight: bold;
    }
</style>

<section class="home fade-in">
    @if (_usuario == null)
    {
        <div class="text-center">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
        </div>
    }
    else
    {
        <div class="img-container">
            <img class="img-perfil" src="@_usuario.AvatarUrl" />
        </div>
        <div class="apresentacao">
            <h2 class="titulo">Sobre Mim</h2>
            <small>Desenvolvedor C# .NET</small>
            <br />
            <br />
            <p>
                Olá, tudo bem? Meu nome é João Alencar, tenho 24 anos e estou atualmente cursando
                Análise e Desenvolvimento de Sistemas na Faculdade Impacta de Tecnologia.
                Apaixonado por tecnologia e sempre buscando adiquirir mais conhecimento nas
                horas vagas.
            </p>
        </div>
    }
</section>

@code {
    private Owner _usuario;

    protected async override Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        _usuario = await Api.GetDonoRepositorio("joaoalen98");
    }
}


